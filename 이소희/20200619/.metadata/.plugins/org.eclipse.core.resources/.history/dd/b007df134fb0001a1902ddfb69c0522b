package com.exam;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.concurrent.atomic.AtomicInteger;

import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

//자바웹 애플리케이션에서 데이터를 저장할 수 있는 공간(객체)
//요청 객체(HttpservletRequest) : 요청마다 1개씩 새로 생성, 요청 처리(응답전송)가 끝나면 소멸
//세션 객체(HttpSession) : 사용자(웹브라우저)마다 1개씩 생성, 웹애플리케이션 실행 중 계속 유지
//서블릿컨텍스트 객체(HttpservletContext) 

@WebServlet("/attr.do")
public class AttrServlet extends HttpServlet {

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		// 요청 객체에 "reqCnt"라는 이름으로 저장된 값을 가져오기
		AtomicInteger rcnt = (AtomicInteger) req.getAttribute("reqCnt");
		if (rcnt == null) {// 요청 객체에 "reqCnt"라는 이름으로 저장한 적이 없는 경우
			rcnt = new AtomicInteger(0); // 0 값을 가진 정수 객체 생성
		}
		rcnt.incrementAndGet(); // 정수 값을 1증가
		req.setAttribute("reqCnt", rcnt); // 요청 객체에 "reqCnt"라는 rcnt 값을 저장

	
		
		HttpSession session = req.getSession(); // 현재 요청이 속한 세션 객체 가져오기
		// 세션 객체에 "sesCnt"라는 이름으로 저장된 값을 가져오기
		AtomicInteger scnt = (AtomicInteger) session.getAttribute("sesCnt");
		if (scnt == null) {// 세션 객체에 "sesCnt"라는 이름으로 저장한 적이 없는 경우
			scnt = new AtomicInteger(0); // 0 값을 가진 정수 객체 생성
		}
		scnt.incrementAndGet(); // 정수 값을 1증가
		session.setAttribute("sesCnt", scnt); // 세션 객체에 "sesCnt"라는 scnt 값을 저장

		
		
		
		//현재 웹 애플리케이션의 서블릿 컨텍스트 객체 가져오기
		ServletContext context = req.getServletContext();
		AtomicInteger concnt = (AtomicInteger) context.getAttribute("conCnt");
		if (concnt == null) {// 서블릿 컨텍스트 객체에 "concnt"라는 이름으로 저장한 적이 없는 경우
			concnt = new AtomicInteger(0); // 0 값을 가진 정수 객체 생성
		}
		concnt.incrementAndGet(); // 정수 값을 1증가
		context.setAttribute("conCnt", concnt); // 서블릿 컨텍스트 객체에 "concnt"라는 concnt 값을 저장
		

		PrintWriter out = resp.getWriter();
		out.println("request Cnt :" + rcnt);
		out.println("session Cnt :" + scnt);
	}

}
