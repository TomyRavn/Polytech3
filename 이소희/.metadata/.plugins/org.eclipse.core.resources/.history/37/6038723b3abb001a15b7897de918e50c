package ex;

import java.util.Scanner;

public class Value {
	public static void main(String[] args) {
		
	
	Scanner sc = new Scanner(System.in);

		System.out.println("1.덧셈 2.뺄셈 3.곱셈 4.나눗셈 5.종료 >> ");
		int a = sc.nextInt();

		
		while (true) {
			if (a == 5) {
				System.out.println("종료합니다.");
				break;
			} else if (a == 1) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b + c);
				break; 
			else if (a == 2) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b - c);
				break;
			} else if (a == 3) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b * c);
				break;
			} else if (a == 4) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b / c);
				break;
			} else
				System.out.println("다시 입력하세요.");
		}
	}
}