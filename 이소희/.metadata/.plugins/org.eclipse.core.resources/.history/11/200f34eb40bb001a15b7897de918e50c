package ex;

import java.util.Scanner;

public class Value{
	public static void menu() {
		System.out.println("1.덧셈 2.뺄셈 3.곱셈 4.나눗셈 5.종료 >> ");

	}

	public static void main(String[] args) {

		while (true) {
			Scanner sc = new Scanner(System.in);
			menu();
			int n = sc.nextInt();
			
			System.out.println("첫 번째 숫자를 입력하시오.");
			int a = sc.nextInt();
			System.out.println("두 번째 숫자를 입력하시오.");
			int b = sc.nextInt();
			int result = 0;
			
			switch(n) {
			case 1: Calc c = new Add(); 
			c.setValue(a, b);
			result = c.calculate(); break;
			
			case 2: Calc c1 = new Add(); 
			c1.setValue(a, b);
			result = c1.calculate(); break;
			
			case 3: Calc c2 = new Add(); 
			c2.setValue(a, b);
			result = c2.calculate(); break;
			
			case 4: Calc c3 = new Add(); 
			c3.setValue(a, b);
			result = c3.calculate(); break;
			
			case 5: return;
			
			}
			
			System.out.println("결과: " + result);
				
				
			if (a == 5) {
				System.out.println("종료합니다.");
				break;
			} else if (a == 1) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b + c);
				break;
			} else if (a == 2) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b - c);
				break;
			} else if (a == 3) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b * c);
				break;
			} else if (a == 4) {
				System.out.println("첫 번째 숫자를 입력하시오.");
				int b = sc.nextInt();
				System.out.println("두 번째숫자를 입력하시오.");
				int c = sc.nextInt();
				System.out.println(b / c);
				break;
			} else
				System.out.println("다시 입력하세요.");
		}
	}
}
	
	public Calc next;
	public Calc() {next = null;}
	abstract public void cal(); //추상 메소드 선언
	

	
}
}

		