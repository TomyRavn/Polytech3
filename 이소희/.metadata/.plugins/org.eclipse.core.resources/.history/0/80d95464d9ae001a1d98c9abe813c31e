package June15;
import java.util.Scanner;

	public class Phone{
		String name;
		String tell;

		void show() {
			System.out.println(name + "의 전화번호는" + tell +"입니다.");
		}


		public Phone(String name, String tell) {
			this.name = name;
			this.tell = tell;
		}

		public static void main(String[] args) {
			Scanner sc = new Scanner(System.in);
			PhoneBook[] ok = new Book3[2];

			for (int i = 0; i < ok.length; i++) {
				System.out.print("작가명을 입력하세요.");
				String name = sc.next();
				System.out.print("책 제목을 입력하세요.");
				String title = sc.next();

				ok[i] = new Book3(title, name);

			}
			for (int i = 0; i < ok.length; i++) {
				ok[i].show();

			}

		}

	}