package kr.ac.kopo.member;

import java.io.IOException;
import java.util.ArrayList;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


//1."/member/login.do"로 GET방식 요청을 보내면
//	/WEB-INF/jsp/member/login.jsp로 이동(forward)하여
//	아이디와 비밀번호를 입력할 수 있는 화면을 출력
//2. 아이디와 비밀번호를 입력하고 로그인 버튼을 클릭하면
//	"/member/login.do"로  POST 방식 요청을 전송하고,
//	입력한 아이디와 비밀번호의 회원의 정보를 member 테이블에서 조회하고
//	그런 회원이 있으면 "login success"라고 출력하고
//	그런 회원이 없으면 "login fail"라고 출력
@WebServlet("/member/ltest.do")
public class LoginServlet extends HttpServlet {

		MemberDaoJdbc memberDao = new MemberDaoJdbc();

		@Override
		protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
			ArrayList<MemberVo> list = memberDao.selectMemberList();

			req.setAttribute("memList", list);
				
			req.getRequestDispatcher("/META-INF/jsp/member/login.jsp").forward(req, resp);
			
		}
		
	}
