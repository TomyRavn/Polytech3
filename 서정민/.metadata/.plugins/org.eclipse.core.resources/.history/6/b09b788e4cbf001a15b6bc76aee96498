import java.util.Scanner;

public class Q1 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int cnt;
		
		for (int i = 0; i<10; i++) {
			
			int [] arr = new int[4];
			
			System.out.println("Q1. 2018년 여름 휴가 계획은?");
			System.out.println("(1)여행 (2)독서 (3)방콕 (4)아직결정안됨 [선택]");
			int n = sc.nextInt();
			
			switch (n) {
			case 1:
				if(n==1)		break;
			case 2: 
				if(n==2) arr[1]++; break;	
			case 3:
				if(n==3) arr[2]++; break;	
			case 4: 
				if(n==4) arr[3]++; break;					
				default: break;
			}			
			System.out.println();			
		}
	}

}
